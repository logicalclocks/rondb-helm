{
    "Internal": {
        "APIVersion": "0.1.0"
    },
    "REST": {
        "ServerIP": "0.0.0.0",
        "ServerPort": 4406
    },
    "GRPC": {
        "ServerIP": "0.0.0.0",
        "ServerPort": 5406
    },
    "RonDB": {
        "Mgmds": [
            {
                "IP": "mgmds-0.mgmd.{{ $.Release.Namespace }}.svc.cluster.local",
                "Port": 1186
            }
        ]
    },
    "Security": {
        "TLS": {
{{ if and .Values.global .Values.global.security.tls.enabled }}
            "EnableTLS": true,
{{ else }}
            "EnableTLS": false,
{{ end }}
{{- /*
The prefix in the filenames come from the "locality" field in the HopsworksCert CRD.
*/}}
            "CertificateFile": "/etc/tls/mysql_certificate_bundle.pem",
            "PrivateKeyFile": "/etc/tls/mysql_priv.pem",
            "RootCACertFile": "/etc/tls/hops_root_ca.pem",
            "RequireAndVerifyClientCert": false
        },
        "APIKey": {
            "UseHopsworksAPIKeys": false
        }
    },
    "Log": {
        "Level": "info"
    }
}
